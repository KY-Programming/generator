<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Company>KY-Programming</Company>
        <Authors>KY-Programming</Authors>
        <Version>10.0.0-preview.20</Version>
        <Product>KY.Generator</Product>
        <Description>Reflection Module for KY-Generator
            Download KY.Generator to use this module
        </Description>
        <Copyright>2025 - KY-Programming</Copyright>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://generator.ky-programming.de</PackageProjectUrl>
        <PackageIcon>assets\icon.png</PackageIcon>
        <RepositoryUrl>https://github.com/KY-Programming/generator</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>KY-Generator KY.Generator Reflection</PackageTags>
        <LangVersion>latest</LangVersion>
        <RootNamespace>KY.Generator</RootNamespace>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <OutputPath>..\bin\Debug</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <OutputPath>..\bin\Release</OutputPath>
        <NoWarn>1701;1702;1591</NoWarn>
        <DocumentationFile>..\bin\Release\KY.Generator.Reflection.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Common\KY.Generator.Common.csproj" />
        <ProjectReference Include="..\CSharp\KY.Generator.Csharp.csproj" />
        <ProjectReference Include="..\TypeScript\KY.Generator.TypeScript.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\icon.png" Pack="true" PackagePath="assets" Visible="false" />
        <None Include="..\Common\README.md" Pack="true" PackagePath="" Visible="false" />
        <None Include="$(OutputPath)\netstandard2.0\publish\KY.Generator.Reflection.Generator.dll" Pack="true" PackagePath="lib\netstandard2.0\" Visible="false" />
        <None Include="$(OutputPath)\net6.0\publish\KY.Generator.Reflection.Generator.dll" Pack="true" PackagePath="lib\net6.0\" Visible="false" />
        <None Remove="KY.Generator.Reflection.csproj.DotSettings" />
    </ItemGroup>

</Project>
